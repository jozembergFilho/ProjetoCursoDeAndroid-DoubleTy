<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.berg.doublety.MainActivity">


    <ImageView
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center"
        android:src="@drawable/name_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout

            android:id="@+id/btn_praticar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:layout_margin="32dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_aprender"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/ic_aprender" />

            <com.example.berg.doublety.entidades.FentonBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Praticar"
                android:textSize="20sp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                />


        </LinearLayout>

        <LinearLayout

            android:id="@+id/btn_exercicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="32dp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_exercicios"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/ic_exercicios" />

            <com.example.berg.doublety.entidades.FentonBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual"
                android:layout_marginTop="18dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                />


        </LinearLayout>

        <LinearLayout

            android:id="@+id/btn_sair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:layout_margin="32dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_sair"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/ic_exit" />

            <com.example.berg.doublety.entidades.FentonBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sair"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_trofeu"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_trofeu" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            android:src="@drawable/doublety_log_blue" />

        <ImageView
            android:id="@+id/img_settings"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_settings_grey600_48dp" />








    </LinearLayout>


</LinearLayout>





